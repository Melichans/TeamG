<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>AI Shift Project</display-name>

    <!-- ✅ Login -->
    <servlet>
        <servlet-name>LoginAction</servlet-name>
        <servlet-class>loginlogout.LoginAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginAction</servlet-name>
        <url-pattern>/loginlogout/LoginAction</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginExecuteAction</servlet-name>
        <servlet-class>loginlogout.LoginExecuteAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginExecuteAction</servlet-name>
        <url-pattern>/loginlogout/LoginExecuteAction</url-pattern>
    </servlet-mapping>

    <!-- ✅ Logout -->
    <servlet>
        <servlet-name>LogoutAction</servlet-name>
        <servlet-class>loginlogout.LogoutAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutAction</servlet-name>
        <url-pattern>/loginlogout/LogoutAction</url-pattern>
    </servlet-mapping>

    <!-- ✅ User -->
    <servlet>
        <servlet-name>UserListAction</servlet-name>
        <servlet-class>user.UserListAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserListAction</servlet-name>
        <url-pattern>/user/UserListAction</url-pattern>
    </servlet-mapping>

    <!-- ✅ JSP mặc định -->
    <welcome-file-list>
        <welcome-file>loginlogout/login.jsp</welcome-file>
    </welcome-file-list>

</web-app>
